
# test_g31.gpp -- more tests

@include "guppy_stdlib.gpi"
# @external "guppy" "define guppy_screen_process (chan?(string) in) = 128"

define delta (chan(int) in?, out0!, out1!)
  while true
    int v

    in ? v
    par
      out0 ! v
      out1 ! v
end

define prefix (val int n, chan(int) in?, out!)
  out ! n

  while true
    int v

    in ? v
    out ! v
end

define succ (chan(int) in?, out!)
  while true
    int v

    in ? v
    out ! v + 1
end

define sink (chan(int) in?, chan(string) out!)
  while true
    int v
    int t0, t1
    timer tim

    tim ? t0
    seq for 100000
      in ? v
    tim ? t1
    out ! "tick\n"

end

define test_g31 (chan(string) screen!)
  chan(int) a, b, c, d
  par
    prefix (0, d?, a!)
    delta (a?, b!, c!)
    succ (b?, d!)
    sink (c?, screen!)
end


